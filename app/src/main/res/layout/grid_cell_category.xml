<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="224dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/layoutContent"
            android:layout_width="match_parent"
            android:layout_height="186dp">
        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="186dp"
            android:paddingTop="20dp"
            android:src="@drawable/m_egypt"
            android:background="@drawable/shape_round_corners_top"
            android:scaleType="fitCenter"/>
            <RelativeLayout
                android:id="@+id/textCost"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_alignParentRight="true"
                android:textAlignment="textEnd"
                android:paddingTop="2dp"
                android:paddingBottom="6dp"
                android:paddingRight="0dp"
                android:background="@drawable/shape_round_corner_bottom_left">
                <ImageView
                    android:id="@+id/imageStatus"
                    android:layout_width="@dimen/grid_panel_icon_size"
                    android:layout_height="@dimen/grid_panel_icon_size"
                    android:layout_marginRight="6dp"
                    android:layout_alignParentRight="true"
                    android:tint="@android:color/white"
                    android:src="@drawable/ic_blur_24dp"
                    android:layout_centerInParent="true"
                    android:scaleType="centerCrop"/>
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layoutPanel"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="-8dp"
            android:layout_marginBottom="8dp"
            android:padding="8dp"
            android:layout_gravity="bottom"
            android:background="@drawable/shape_round_corners_bottom">
            <TextView
                android:id="@+id/textName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:textAlignment="textStart"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_marginRight="65dp"
                android:textSize="16dp"
                android:textStyle="bold"
                android:text="Name"
                android:textColor="@android:color/white"/>

            <ImageView
                android:id="@+id/imageDownload"
                android:layout_width="@dimen/grid_panel_icon_size"
                android:layout_height="@dimen/grid_panel_icon_size"
                android:layout_marginRight="6dp"
                android:layout_alignParentRight="true"
                android:tint="@android:color/white"
                android:src="@drawable/ic_cloud_download"
                android:scaleType="centerCrop"/>
        </RelativeLayout>

    </LinearLayout>
</FrameLayout>